<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Terrarium.Avalonia.Helpers"
             x:Class="Terrarium.Avalonia.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/AppStyles.axaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:ObjectToGeometryConverter x:Key="ObjToGeom"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>