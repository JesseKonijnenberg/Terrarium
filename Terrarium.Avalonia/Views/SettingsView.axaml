<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Terrarium.Avalonia.ViewModels"
             x:Class="Terrarium.Avalonia.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid Margin="40">
        <StackPanel Spacing="20">
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextMain}"/>
            <Border Background="{StaticResource BorderColor}" Height="1" Margin="0,0,0,20"/>

            <StackPanel Spacing="10">
                <TextBlock Text="ABOUT" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                
                <Border Background="{StaticResource BgSidebar}" CornerRadius="8" Padding="20">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel>
                            <TextBlock Text="Terrarium" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="Productivity &amp; Life Management" FontSize="12" Foreground="{StaticResource TextMuted}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Current Version:" Foreground="{StaticResource TextMuted}"/>
                            <TextBlock Text="{Binding AppVersion}" Foreground="{StaticResource AccentSage}" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <StackPanel Spacing="10" Margin="0,20,0,0">
                <TextBlock Text="GENERAL" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMuted}"/>
                <Border Background="{StaticResource BgSidebar}" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="15">
                         <ToggleSwitch Content="Dark Mode" IsChecked="True" OnContent="On" OffContent="Off"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>