<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Terrarium.Avalonia.ViewModels"
             xmlns:c="using:Terrarium.Avalonia.Controls"
             x:Class="Terrarium.Avalonia.Controls.SidebarControl"
             x:DataType="vm:MainWindowViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button.Icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="{TemplateBinding Background}">
                        <Path Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ObjToGeom}}" 
                              Stroke="{StaticResource TextMuted}" 
                              StrokeThickness="2" 
                              Fill="Transparent"
                              Margin="2" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Width="20" Height="20" 
                              Stretch="Uniform"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="Button.WorkspaceDot">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Ellipse Name="Dot" Width="8" Height="8" Fill="{StaticResource BorderColor}" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.WorkspaceDot:pointerover /template/ Ellipse">
            <Setter Property="Fill" Value="{StaticResource TextMuted}"/>
        </Style>
    </UserControl.Styles>

    <Border Background="{StaticResource BgSidebar}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
        <Grid RowDefinitions="Auto, *, Auto">
            
            <StackPanel Grid.Row="0" Margin="0,30,0,0" HorizontalAlignment="Center">
                <ItemsControl ItemsSource="{Binding Organizations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="5" Margin="0,0,0,20">
                                <Border Width="42" Height="42" CornerRadius="12" 
                                        Background="{StaticResource BgCard}" 
                                        BorderBrush="{StaticResource AccentSage}" BorderThickness="1.5"
                                        ToolTip.Tip="{Binding Name}" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Name[0]}" Foreground="{StaticResource AccentSage}"
                                               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontSize="16"/>
                                </Border>

                                <ItemsControl ItemsSource="{Binding Workspaces}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="WorkspaceDot" 
                                                    Command="{Binding $parent[UserControl].((vm:MainWindowViewModel)DataContext).SelectWorkspaceCommand}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip.Tip="{Binding Name}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Background="{StaticResource BorderColor}" Opacity="0.3" Margin="15,0,15,20" Height="1"/>
            </StackPanel>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Spacing="15">
                <Button Classes="Icon" Content="{StaticResource IconLayout}" Command="{Binding GoToBoardCommand}" ToolTip.Tip="Work Board"/>
                <Button Classes="Icon" Content="{StaticResource IconLeaf}" Command="{Binding GoToGardenCommand}" ToolTip.Tip="Garden Sanctuary"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,20" HorizontalAlignment="Center">
                <c:UpdateStatusControl DataContext="{Binding BoardVm.Updater}" Margin="0,0,0,20" />
                <Button Classes="Icon" Content="{StaticResource IconSettings}" Command="{Binding GoToSettingsCommand}" ToolTip.Tip="Settings"/>
            </StackPanel>
            
        </Grid>
    </Border>
</UserControl>