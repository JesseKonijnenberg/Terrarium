<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Terrarium.Avalonia.ViewModels"
             xmlns:kanban="clr-namespace:Terrarium.Avalonia.Models.Kanban"
             xmlns:helpers="clr-namespace:Terrarium.Avalonia.Helpers"
             x:Class="Terrarium.Avalonia.Controls.TaskDetailControl"
             x:DataType="kanban:TaskItem">

    <UserControl.Resources>
        <helpers:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="ComboBox, CalendarDatePicker">
            <Setter Property="Background" Value="{DynamicResource BgMain}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style Selector="ComboBox">
            <Style Selector="^ /template/ Panel#PART_Popup">
                <Setter Property="Background" Value="{DynamicResource BgSidebar}"/>
            </Style>
        </Style>

        <Style Selector="ComboBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
        </Style>

        <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource BgCardHover}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
        </Style>

        <Style Selector="ComboBox:pointerover, CalendarDatePicker:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentSage}"/>
        </Style>

        <Style Selector="CalendarDatePicker /template/ TextBox#PART_TextBox">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsHitTestVisible" Value="False" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource TextMain}" />
            <Setter Property="VerticalContentAlignment" Value="Center" /> 
        </Style>
        
        <Style Selector="Calendar">
            <Setter Property="Background" Value="{DynamicResource BgSidebar}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}"/>
        </Style>

        <Style Selector="CalendarDayButton">
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
        </Style>

        <Style Selector="CalendarDayButton:today /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentSage}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
    </UserControl.Styles>
    
    <Grid Background="{DynamicResource BgSidebar}" Focusable="True">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" Color="Black" Opacity="0.5" OffsetX="-5"/>
        </Grid.Effect>

        <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,0,0,0">
            <Grid RowDefinitions="80, *, Auto">
                
                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="30,0">
                    <Grid ColumnDefinitions="*, Auto, Auto">
                        <TextBlock Text="DETAIL VIEW" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1" Content="Delete" FontSize="14" Foreground="#E57373" Background="Transparent" Margin="0,0,15,0"
                                Command="{Binding $parent[UserControl;1].((vm:KanbanBoardViewModel)DataContext).DeleteTaskCommand}"/>
                        
                        <Button Grid.Column="2" Content="âœ•" Foreground="{DynamicResource TextMuted}" Background="Transparent" 
                                Command="{Binding $parent[UserControl;1].((vm:KanbanBoardViewModel)DataContext).CloseDetailsAsync}"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30">
                    <StackPanel Spacing="20">
                        
                        <TextBlock Text="TITLE" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold"/>
                        <TextBox Text="{Binding Title}" Foreground="{DynamicResource TextMain}" Background="Transparent" 
                                 BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" 
                                 FontSize="24" FontFamily="Georgia" TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <Border Background="{Binding TagBgColor}" CornerRadius="{DynamicResource MainCornerRadius}" Padding="12,2">
                                <TextBox Text="{Binding Tag}" Foreground="{Binding TagTextColor}" 
                                         Background="Transparent" BorderThickness="0" 
                                         FontWeight="Bold" FontSize="10" Width="60"/>
                            </Border>
    
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                <TextBlock Text="Due" Foreground="{DynamicResource TextMuted}" FontSize="12" VerticalAlignment="Center"/>
                                <CalendarDatePicker SelectedDate="{Binding DueDate}" 
                                                    IsTodayHighlighted="True"
                                                    Padding="12,6"
                                                    Watermark="No Deadline"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="PRIORITY" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{x:Static kanban:TaskItem.AllPriorities}" 
                                  SelectedItem="{Binding Priority}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Ellipse Width="8" Height="8" VerticalAlignment="Center"
                                                 Fill="{Binding Converter={StaticResource PriorityToColorConverter}}"/>
                                        <TextBlock Text="{Binding}" FontSize="12" Foreground="{DynamicResource TextMain}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="DESCRIPTION" Foreground="{DynamicResource TextMuted}" FontSize="10" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding Description}" Foreground="{DynamicResource TextMain}" Background="{DynamicResource BgMain}" 
                                 BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="{DynamicResource MainCornerRadius}" 
                                 Padding="10" MinHeight="150" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="{DynamicResource BgSidebar}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
                    <Border Background="{DynamicResource BgMain}" CornerRadius="{DynamicResource MainCornerRadius}" Height="50" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
                        <TextBlock Text="Type a note..." Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center" Margin="15,0"/>
                    </Border>
                </Border>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>