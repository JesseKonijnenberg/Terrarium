<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Terrarium.Avalonia.Controls.TopBarControl">
    
    <Border Background="{DynamicResource BgMain}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1" Padding="30,0">
        <Grid ColumnDefinitions="Auto, Auto, *, Auto">
            <TextBlock Text="Dashboard" FontSize="24" FontFamily="Georgia" VerticalAlignment="Center" Foreground="{DynamicResource TextMain}"/>
            <Rectangle Grid.Column="1" Width="1" Height="30" Fill="{DynamicResource BorderColor}" Margin="20,0"/>
            
            <Border Grid.Column="3" Background="{DynamicResource BgSidebar}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8" Width="250" Height="40" Padding="12,0">
                <Grid ColumnDefinitions="Auto, *">
                    <Path Data="{StaticResource IconSearch}" Stroke="{DynamicResource TextMuted}" StrokeThickness="1.5" Width="14" Height="23" VerticalAlignment="Center"/>
                    
                    <TextBox Grid.Column="1" 
                             Watermark="Search..."
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource TextMain}"
                             CaretBrush="{DynamicResource TextMain}"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="5,0,0,0"
                             FontSize="13">
                        
                        <TextBox.Styles>
                            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>